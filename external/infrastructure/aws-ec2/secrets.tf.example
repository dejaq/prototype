variable "access-key" {
  default = "aws-access-key"
}

variable "secret-key" {
  default = "aws-secret-key"
}

# key will be added into machine for ssh latter
variable "public-key" {
  default = "your-public-key"
}

variable "region" {
  default = "eu-central-1"
}
# ubuntu 18.04 LTS, it is related to region (https://cloud-images.ubuntu.com/locator/ec2/)
variable "instance-ami" {
  default = "ami-0e342d72b12109f91"
}

variable "instance-type" {
  default = "t2.micro"
}

# instances number
variable "broker-count" {
  default = 1
}
variable "producer-count" {
  default = 1
}
variable "consumer-count" {
  default = 1
}
